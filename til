#!/usr/bin/env ruby
require 'date'
require 'awesome_print'
require 'dotenv'
Dotenv.load
input = "\n- " + ARGV[0]
file_path = "#{ENV["PATH_TO_README_PARENT"]}readme.md"
f = File.open(file_path, 'rb')
d = DateTime.now.strftime("%m/%d/%Y")
contents = f.read
if contents.include?(d)
  input = contents + input
else
  input = contents + "\n" + "## #{d}" + input
end
f = File.open(file_path, 'w')
f.write(input)
